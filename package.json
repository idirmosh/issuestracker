{
  "name": "issuetracker",
  "version": "1.6.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/shared/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "localdb": "concurrently \"pscale connect issuetracker shadow --port 3309\" \"pscale connect issuetracker initial-setup --port 3310\"",
    "alldev": "concurrently \"yarn run localdb\" \"yarn run dev\""
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "tailwindcss": "^3.1.6",
    "turbo": "^1.3.1"
  },
  "engines": {
    "npm": ">=8.11.0",
    "node": "^16.16.0"
  },
  "packageManager": "yarn@1.22.18"
}
